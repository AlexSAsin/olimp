#:kivy 1.9.1
# (0.44, 0.85, 0.886, 1.0)
# (0.02, 0.41, 0.41, 1.0)
#:set col1 (1, 1, 1, 1.0)
#:set col1 (0.44, 0.85, 0.886, 1.0)
#:set col2 (0.02, 0.41, 0.41, 1.0)

<CommonButton>:
    background_color: col1

<CommonHorizontalButton>:


<AuthScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: ['10dp', '20dp']
        CommonHorizontalButton:
            text: 'My auth button'
        CommonHorizontalButton:
            text: 'Back to main'
            on_press: root.manager.current = 'main'
            
<PersonalAreaScreen>:
    BoxLayout:
        CommonButton:
            text: 'My auth button'
        CommonButton:
            text: 'Back to main'
            on_press: root.manager.current = 'main'

<VgxMainScreen>:
    size_hint: None, None
    BoxLayout:
        size: self.parent.size  # important!
        pos: self.parent.pos  # important!
        orientation: 'vertical'
        spacing: '8dp'

        CommonButton:
            text: 'Личный кабинет'
            on_press: root.manager.current = 'auth'
        CommonButton:
            text: 'Тренировки'
        CommonButton:
            text: 'Соревнования'
        CommonButton:
            text: 'ФОК "Олимп"'

<VgxUI>:
    AnchorLayout:
        canvas.before:
            Color:
                rgba: col2
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        VgxMainScreen:
            size: '150dp', '220dp'

<VgxApp>:
    FloatLayout:
        VgxUI:
            center: 0.5, 0.5