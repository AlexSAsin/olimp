        PersonalAreaScreen:
            size: self.parent.size  # important!



<InfoUserScreen>:
    size_hint: None, None
    BoxLayout:
        size: self.parent.size  # important!
        pos: self.parent.pos  # important!
        orientation: 'vertical'

        ## ->
        spacing: '8dp'
        BoxLayout:
            size: self.parent.size  # important!
            pos: self.parent.pos  # important!
            orientation: 'vertical'
            Label:
                text: 'Выберите пол'
                size_hint_y: None
                height: 20
            Button:
                text: 'Мужской'
                size_hint_y: None
                height: 20
                on_release: self.select('item1')
            Button:
                text: 'Женский'
                size_hint_y: None
                height: 20
                on_release: self.select('item2')

        Label:
            text: 'Введите вес'
        TextInput:
            height: 200
            id: weight
            text: ''
        Label:
            text: 'Введите возраст'
        TextInput:
            id: age_id
            text: ''  
        Label:
            text: 'Введите дистанцию, которую\n проплываете за 45 мин'
            multiline: True
        TextInput:
            id: distant_id
            text: ''
        CommonButton:
            text: 'Сохранить'
            on_press: root.manager.current = 'personal_area'
        CommonButton:
            text: 'Назад'
            on_press: root.manager.current = 'main'
