<VgxMainScreen>:
    size_hint: None, None
    BoxLayout:
        size: self.parent.size  # important!
        pos: self.parent.pos  # important!
        orientation: 'vertical'
        spacing: '8dp'

        CommonButton:
            text: 'Личный кабинет'
            on_press: root.manager.current = 'personal_area'
        CommonButton:
            text: 'Тренировки'
            on_press: root.manager.current = 'training_screen'
        CommonButton:
            text: 'Соревнования'
            on_press: root.manager.current = 'competitions_screen'
        CommonButton:
            text: 'ФОК "Олимп"'

<VgxUI>:
    AnchorLayout:
        canvas.before:
            Color:
                rgba: col2
            Rectangle:
                pos: self.pos
                size: self.size
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'
        VgxMainScreen:
            size: '150dp', '220dp'

